{
  "name": "mtbassist",
  "displayName": "mtbassist",
  "description": "An Assistant for ModusToolbox",
  "version": "1.0.0",
  "publisher" : "ApolloSoftware",
  "license" : "license.txt",
  "icon" : "media/exticon.png",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "modustoolbox",
    "embedded development",
    "ARM cortex"
  ],
  "activationEvents": [
    "onView:mtbglobal",
    "onView:mtbdocs",
    "onCommand:mtbassist.mtbCreateProject",
    "onCommand:mtbassist.mtbImportProject",
    "onCommand:mtbassist.mtbRunEditor",
    "onCommand:mtbassist.mtbShowDoc",
    "workspaceContains:Makefile",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mtbassist.mtbCreateProject",
        "title": "ModusToolbox Create Project"
      },
      {
        "command": "mtbassist.mtbImportProject",
        "title": "ModusToolbox Import Project"
      },
      {
        "command": "mtbassist.mtbRunEditor",
        "title": "ModusToolbox Run Editor"
      },
      {
        "command": "mtbassist.mtbShowDoc",
        "title": "ModusToolbox Show Document"
      },
      {
        "command": "mtbassist.mtbShowWelcomePage",
        "title": "ModusToolbox Assistant Show Welcome Page"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mtbcontainer",
          "title": "ModusToolbox Assistant",
          "icon": "media/bot.png"
        }
      ]
    },
    "views": {
      "mtbcontainer": [
        {
          "id": "mtbglobal",
          "name": "ModusToolbox",
          "icon": "media/bot.png",
          "contextualTitle": "Global Programs"
        },
        {
          "id": "mtbdocs",
          "name": "Documentation",
          "icon": "media/bot.png",
          "contextualTitle": "Global Docs"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "open": "^8.4.0"
  }
}
